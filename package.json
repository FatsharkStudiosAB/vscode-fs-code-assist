{
  "name": "fatshark-code-assist",
  "displayName": "Fatshark Code Assist",
  "description": "Stingray Intellisense, debugging and code browsing.",
  "icon": "resources/fs-code-assist.png",
  "version": "0.4.0",
  "publisher": "Fatshark",
  "engines": {
    "vscode": "^1.63.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ManuelBlanc/vscode-vtide.git"
  },
  "author": {
    "url": "http://www.fatshark.se",
    "name": "Fatshark",
    "email": "tools@fatshark.se"
  },
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "fatshark",
    "stingray",
    "debugger",
    "lua"
  ],
  "activationEvents": [
    "onCommand:fatshark-code-assist.stingrayConnect",
    "onCommand:fatshark-code-assist.stingrayRecompile",
    "onUri",
    "onLanguage:lua",
    "onLanguage:sjson",
    "onTaskType:stingray_lua"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fatshark-code-assist.stingrayConnect",
        "title": "Connect to All",
        "category": "Stingray",
        "icon": "$(search)"
      },
      {
        "command": "fatshark-code-assist.stingrayDisconnect",
        "title": "Disconnect",
        "category": "Stingray",
        "icon": "$(close)"
      },
      {
        "command": "fatshark-code-assist.stingrayDisconnectAll",
        "title": "Disconnect All",
        "category": "Stingray",
        "icon": "$(close-all)"
      },
      {
        "command": "fatshark-code-assist.stingrayRecompile",
        "title": "Recompile and Reload Sources",
        "category": "Stingray",
        "icon": "$(server-environment)"
      },
      {
        "command": "fatshark-code-assist.stingrayReloadSources",
        "title": "Reload Sources",
        "category": "Stingray",
        "icon": "$(repo-sync)"
      },
      {
        "command": "fatshark-code-assist.executeLua",
        "title": "Execute Lua",
        "category": "Stingray"
      },
      {
        "command": "fatshark-code-assist.executeSelection",
        "title": "Execute Selection",
        "category": "Stingray"
      },
      {
        "command": "fatshark-code-assist.executeFile",
        "title": "Execute File",
        "category": "Stingray"
      },
      {
        "command": "fatshark-code-assist.stingrayCommand",
        "title": "Command",
        "category": "Stingray"
      },
      {
        "command": "fatshark-code-assist.stingrayCommandTarget",
        "title": "Execute Command on Target",
        "category": "Stingray"
      },
      {
        "command": "fatshark-code-assist.selectionTarget",
        "title": "Execute Selection on Target",
        "category": "Stingray"
      },
      {
        "command": "fatshark-code-assist.attachDebugger",
        "title": "Attach Debugger",
        "category": "Stingray",
        "icon": "$(debug-alt)"
      },
      {
        "command": "fatshark-code-assist.stingrayLaunch",
        "title": "Launch all Instances",
        "category": "Stingray",
        "icon": "$(run-all)"
      },
      {
        "command": "fatshark-code-assist.refreshTargets",
        "title": "Reload Configuration",
        "category": "Stingray",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fatshark-code-assist.stingrayCommandTarget",
          "when": "false"
        },
        {
          "command": "fatshark-code-assist.executeSelection",
          "when": "false"
        },
        {
          "command": "fatshark-code-assist.selectionTarget",
          "when": "false"
        },
        {
          "command": "fatshark-code-assist.stingrayLaunch",
          "when": "false"
        },
        {
          "command": "fatshark-code-assist.attachDebugger",
          "when": "false"
        },
        {
          "command": "fatshark-code-assist.refreshTargets",
          "when": "false"
        },
        {
          "command": "fatshark-code-assist.stingrayDisconnect",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "fatshark-code-assist.executeSelection",
          "group": "Stingray",
          "when": "editorHasSelection"
        }
      ],
      "view/title": [
        {
          "command": "fatshark-code-assist.refreshTargets",
          "group": "navigation",
          "when": "view == fs-code-assist-targets"
        },
        {
          "command": "fatshark-code-assist.refreshTargets",
          "group": "navigation",
          "when": "view == fs-code-assist-launch"
        }
      ],
      "view/item/context": [
        {
          "command": "fatshark-code-assist.attachDebugger",
          "when": "viewItem == connected-client",
          "group": "inline@1"
        },
        {
          "command": "fatshark-code-assist.stingrayDisconnect",
          "when": "viewItem == connected-client",
          "group": "inline@2"
        },
        {
          "command": "fatshark-code-assist.stingrayCommandTarget",
          "when": "viewItem == connected-client"
        },
        {
          "command": "fatshark-code-assist.executeLua",
          "when": "viewItem == connected-client"
        },
        {
          "command": "fatshark-code-assist.selectionTarget",
          "when": "viewItem == connected-client"
        },
        {
          "command": "fatshark-code-assist.stingrayLaunch",
          "when": "viewItem == launch-set",
          "group": "inline@1"
        },
        {
          "command": "fatshark-code-assist.stingrayConnect",
          "when": "viewItem == connection-target",
          "group": "inline@1"
        },
        {
          "command": "fatshark-code-assist.stingrayRecompile",
          "when": "viewItem == connection-target",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Fatshark Code Assist",
      "properties": {
        "StingrayLua.toolchainPath": {
          "type": "string",
          "scope": "window",
          "default": "",
          "description": "Toolchain root, e.g. `C:/BitSquidBinaries`\nDefaults to `%BsBinariesDir%` or `C:/BitSquidBinaries`."
        },
        "StingrayLua.toolchainName": {
          "type": "string",
          "scope": "window",
          "default": "vermintide2",
          "description": "Toolchain name, e.g. `vermintide2`.\nDefaults to `vermintide2`."
        },
        "StingrayLua.platform": {
          "type": "string",
          "scope": "window",
          "default": "win32",
          "description": "Default platform name, e.g. `win32`, `xb1`, `ps4`.\nDefaults to `win32`."
        }
      }
    },
    "languages": [
      {
        "id": "stingray-output",
        "mimetypes": [
          "text/x-code-output"
        ]
      },
      {
        "id": "crashlog",
        "aliases": [
          "Stingray Crashlog"
        ],
        "extensions": [
          ".log"
        ],
        "configuration": "./language-configuration-crashlog.json"
      },
      {
        "id": "lua",
        "aliases": [
          "Stingray Lua"
        ],
        "extensions": [
          ".lua"
        ]
      },
      {
        "id": "sjson",
        "aliases": [
          "Simplified JSON"
        ],
        "filenames": [
          "settings.ini"
        ],
        "extensions": [
          ".bsi",
          ".component",
          ".config",
          ".dcc_asset",
          ".decals",
          ".entity",
          ".flow_editor",
          ".flow",
          ".font",
          ".import_options",
          ".landscape",
          ".level",
          ".material",
          ".mouse_cursor",
          ".network_config",
          ".package",
          ".particle_editor",
          ".particles",
          ".physics_properties",
          ".physics",
          ".plugin",
          ".render_config",
          ".script_flow_nodes",
          ".shader_node",
          ".shader_source",
          ".shader",
          ".shading_environment_template",
          ".shading_environment",
          ".sjson",
          ".sound_environment",
          ".stingray_layout",
          ".stingray_plugin",
          ".stingray_project",
          ".strings",
          ".surface_properties",
          ".texture_category",
          ".texture",
          ".timpani_bank",
          ".timpani_master",
          ".type",
          ".unit_anim",
          ".unit",
          ".volume_type"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "stingray-output",
        "scopeName": "source.stingray-output",
        "path": "./syntaxes/stingray-output.json"
      },
      {
        "language": "crashlog",
        "scopeName": "source.crashlog",
        "path": "./syntaxes/crashlog.json"
      },
      {
        "language": "lua",
        "scopeName": "source.fatshark.lua",
        "path": "./syntaxes/lua-stingray.json"
      },
      {
        "language": "sjson",
        "scopeName": "source.sjson",
        "path": "./syntaxes/sjson.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fs-code-assist",
          "title": "FS Code Assist",
          "icon": "resources/fs-code-assist.svg",
          "when": "fatshark-code-assist:isStingrayProject"
        }
      ]
    },
    "views": {
      "fs-code-assist": [
        {
          "id": "fs-code-assist-targets",
          "name": "Connection Targets",
          "when": "fatshark-code-assist:isStingrayProject"
        },
        {
          "id": "fs-code-assist-clients",
          "name": "Connected Clients",
          "when": "fatshark-code-assist:isStingrayProject"
        },
        {
          "id": "fs-code-assist-launch",
          "name": "Launch Configurations",
          "when": "fatshark-code-assist:isStingrayProject"
        }
      ]
    },
    "breakpoints": [
      {
        "language": "lua"
      }
    ],
    "debuggers": [
      {
        "type": "stingray_lua",
        "label": "Stingray Lua",
        "program": "./out/stingray-debug-adapter.js",
        "runtime": "node",
        "configurationSnippets": [
          {
            "label": "Stingray: Launch",
            "description": "Launch the engine and immediately attach the debugger.",
            "body": {
              "type": "stingray_lua",
              "request": "launch",
              "toolchain": "C:/BitSquidBinaries/${2:vermintide2}",
              "targetId": "00000000-1111-2222-3333-444444444444",
              "arguments": "",
              "name": "${1:My Launch Configuration}"
            }
          },
          {
            "label": "Stingray: Attach",
            "description": "Attach to a running instance of the engine.",
            "body": {
              "type": "stingray_lua",
              "request": "attach",
              "toolchain": "C:/BitSquidBinaries/${2:vermintide2}",
              "ip": "{3:localhost}",
              "port": "${4:14000}",
              "name": "${5:Attach to ${3}:${4}}"
            }
          }
        ],
        "configurationAttributes": {
          "attach": {
            "required": [
              "ip",
              "port",
              "toolchain"
            ],
            "properties": {
              "ip": {
                "type": "string",
                "description": "IP address of the device running the engine.",
                "default": "127.0.0.1"
              },
              "port": {
                "type": "number",
                "description": "Port used by the engine for console connections.",
                "default": 14000
              },
              "toolchain": {
                "type": "string",
                "description": "The absolute path to the toolchain (eg. C:/BitSquidBinaries/vermintide2).",
                "toolchain": "C:/BitSquidBinaries/vermintide2"
              }
            }
          },
          "launch": {
            "required": [
              "toolchain"
            ],
            "properties": {
              "targetId": {
                "type": "string",
                "description": "UUID of the launch target.",
                "default": "00000000-1111-2222-3333-444444444444"
              },
              "timeout": {
                "type": "number",
                "description": "Abort the launch if it takes longer than this to attach (seconds).",
                "default": 5
              },
              "arguments": {
                "type": "string",
                "description": "Extra arguments.",
                "default": ""
              },
              "toolchain": {
                "type": "string",
                "description": "The absolute path to the toolchain (eg. C:/BitSquidBinaries/vermintide2).",
                "default": "C:/BitSquidBinaries/vermintide2"
              },
              "detach": {
                "type": "boolean",
                "description": "If true, the game will stay open after the debugger disconnects.",
                "default": false
              },
              "compile": {
                "type": "boolean",
                "description": "Compile in the same process before launching.",
                "default": false
              }
            }
          }
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "stingray_lua",
        "required": [
          "platform"
        ],
        "properties": {
          "platform": {
            "type": "string",
            "enum": [
              "win32",
              "ps4",
              "xb1",
              "xb12"
            ],
            "description": "Target platform to compile for.",
            "default": "win32"
          },
          "bundle": {
            "type": "boolean",
            "description": "If true, the result will be bundled.",
            "default": false
          },
          "refresh": {
            "type": "boolean",
            "description": "If true, on a successful compile all connected game instances will be reloaded.",
            "default": false
          },
          "watch": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "An optional list of filesystem patterns to watch.",
            "default": [
              "**/*.lua"
            ]
          }
        },
        "when": "customExecutionSupported"
      }
    ],
    "problemPatterns": [
      {
        "name": "stingray-build-lua-error",
        "regexp": "([^:]+\\.lua):(\\d+): (.*)$",
        "file": 1,
        "message": 3,
        "location": 2
      },
      {
        "name": "stingray-build-sjson-error",
        "regexp": "^([^(]+)\\((\\d+):(\\d+)\\): (.*)$",
        "file": 1,
        "message": 4,
        "line": 2,
        "column": 3
      },
      {
        "name": "stingray-build-parse-error",
        "regexp": "Error compiling `([^`]+)`: Parse error '(.*?)' at line (\\d+):",
        "file": 1,
        "message": 2,
        "location": 3
      },
      {
        "name": "stingray-build-generic-error",
        "regexp": "Error compiling `([^`]+)`: (.*)$",
        "file": 1,
        "message": 2,
        "kind": "file"
      }
    ],
    "problemMatchers": [
      {
        "name": "stingray_lua",
        "pattern": ""
      },
      {
        "name": "stingray-build-lua-error",
        "label": "Stingray Lua Errors",
        "owner": "stingray_lua",
        "pattern": "$stingray-build-lua-error",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Compilation started",
          "endsPattern": "Compilation finished"
        }
      },
      {
        "name": "stingray-build-sjson-error",
        "label": "Stingray sjson Error",
        "owner": "stingray_lua",
        "pattern": "$stingray-build-sjson-error",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Compilation started",
          "endsPattern": "Compilation finished"
        }
      },
      {
        "name": "stingray-build-parse-error",
        "label": "Stingray Parse Error",
        "owner": "stingray_lua",
        "pattern": "$stingray-build-parse-error",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Compilation started",
          "endsPattern": "Compilation finished"
        }
      },
      {
        "name": "stingray-build-generic-error",
        "label": "Stingray Generic Error",
        "owner": "stingray_lua",
        "pattern": "$stingray-build-generic-error",
        "background": {
          "activeOnStart": false,
          "beginsPattern": "Compilation started",
          "endsPattern": "Compilation finished"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "simplified-json": "^0.3.0",
    "vscode-debugadapter": "^1.51.0",
    "vscode-debugprotocol": "^1.51.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "vsce": "^2.6.7"
  }
}
